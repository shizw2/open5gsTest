[Unit]
Description=@project_name@ PCF Daemon
Wants=mongodb.service mongod.service

[Service]
Type=simple

User=@project_name@
Group=@project_name@

Restart=always
ExecStart=@bindir@/@project_name@-pcfd -c @sysconfdir@/@project_name@/pcf.yaml
RestartSec=2
RestartPreventExitStatus=1
ExecReload=/bin/kill -HUP $MAINPID

[Install]
WantedBy=multi-user.target
