[Unit]
Description=@project_name@ UPF Daemon
After=network-online.target systemd-networkd.service
Wants=systemd-networkd.service

[Service]
Type=simple

User=@project_name@
Group=@project_name@

Restart=always
ExecStart=@bindir@/@project_name@-upfd -c @sysconfdir@/@project_name@/upf.yaml
RestartSec=2
RestartPreventExitStatus=1
ExecReload=/bin/kill -HUP $MAINPID

[Install]
WantedBy=multi-user.target
