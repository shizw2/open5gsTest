[Unit]
Description=@project_name@ SEPP Daemon
Wants=mongodb.service mongod.service

[Service]
Type=simple

User=@5g_user@
Group=@5g_user@

Restart=always
ExecStart=@bindir@/@project_name@-seppd -c @sysconfdir@/@project_name@/sepp1.yaml
RestartSec=2
RestartPreventExitStatus=1
ExecReload=/bin/kill -HUP $MAINPID

[Install]
WantedBy=multi-user.target
