[Unit]
Description=@project_name@ SCP Daemon
Wants=mongodb.service mongod.service

[Service]
Type=simple

User=@5g_user@
Group=@5g_user@

Restart=always
ExecStart=@bindir@/@project_name@-scpd -c @sysconfdir@/@project_name@/scp.yaml
RestartSec=2
RestartPreventExitStatus=1
ExecReload=/bin/kill -HUP $MAINPID
Environment="LD_LIBRARY_PATH=@libdir@:%LD_LIBRARY_PATH%" 
[Install]
WantedBy=multi-user.target
