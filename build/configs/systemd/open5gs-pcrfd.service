[Unit]
Description=Open5GS PCRF Daemon
Wants=mongodb.service mongod.service

[Service]
Type=simple

User=open5gs
Group=open5gs

Restart=always
ExecStart=/home/git/open5gs-main-2.6.4.1/install/bin/open5gs-pcrfd -c /home/git/open5gs-main-2.6.4.1/install/etc/open5gs/pcrf.yaml
RestartSec=2
RestartPreventExitStatus=1
ExecReload=/bin/kill -HUP $MAINPID

[Install]
WantedBy=multi-user.target
