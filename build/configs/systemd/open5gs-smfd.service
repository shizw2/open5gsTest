[Unit]
Description=Open5GS SMF Daemon
After=network-online.target

[Service]
Type=simple

User=open5gs
Group=open5gs

Restart=always
ExecStart=/home/open5gsTest/install/bin/open5gs-smfd -c /home/open5gsTest/install/etc/open5gs/smf.yaml
RestartSec=2
RestartPreventExitStatus=1
ExecReload=/bin/kill -HUP $MAINPID

[Install]
WantedBy=multi-user.target
