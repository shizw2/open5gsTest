[Unit]
Description=Open5GS SGW-C Daemon
After=network-online.target

[Service]
Type=simple

User=open5gs
Group=open5gs

Restart=always
ExecStart=/home/git/open5gs-main-2.6.4.1/install/bin/open5gs-sgwcd -c /home/git/open5gs-main-2.6.4.1/install/etc/open5gs/sgwc.yaml
RestartSec=2
RestartPreventExitStatus=1
ExecReload=/bin/kill -HUP $MAINPID

[Install]
WantedBy=multi-user.target
